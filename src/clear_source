#!/usr/bin/env node

'use strict';

const cwd = process.cwd();
const pkgJSON = require(`${cwd}/package.json`);
const shouldRun = Boolean(pkgJSON['_where']);

if (!shouldRun) return;

const spawn = require('child_process').spawn;
const path = require('path');

spawn('rm', [
	'-rf',
	'packages',
	'gulpfile.js',
	'.babelrc',
	'.gitignore',
	'.gitmodules',
	'.editorconfig',
	'.travis.yml',
	'scripts'
], {cwd: cwd});
